class Solution {
public:
    int findNumberOfLIS(vector<int>& nums) {
        int n=nums.size();
        vector<int> dp(n,1);
        vector<int> cnt(n,1);
       int maxi=1;
        for(int i=1;i<n;i++){
            for(int j=i-1;j>=0;j--){
                if(nums[i]>nums[j]){
                    int newlen=dp[j]+1;
                    if(newlen>dp[i]){
                        dp[i]=newlen;
                        cnt[i]=cnt[j];
                    }
                    else if(newlen==dp[i]){
                        cnt[i]+=cnt[j];
                    }
                   
                    maxi=max(maxi,dp[i]);
                }
            }
        }
       
          int ans=0;
        for(int i=0;i<n;i++){
            if(dp[i]==maxi)
            ans+=cnt[i];
        }

        return ans;
    }
};