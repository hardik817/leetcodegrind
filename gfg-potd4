class Solution {
  public:
    int maxWater(vector<int> &arr) {
        // code here
        int n=arr.size();
        int i=0;
        int j=n-1;
        int area=0;
        while(i!=j){
            area=max(area,(j-i)*min(arr[i],arr[j]));
            if(arr[i]<=arr[j]){
                i++;
            }
            else{
                j--;
            }
        }
        return area;
    }
};